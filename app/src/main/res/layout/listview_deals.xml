<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Medium Text"
        android:id="@+id/viewDeals_Date"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/viewDeals_sum"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mediu"
        android:id="@+id/viewDeals_buyer"
        android:layout_below="@+id/viewDeals_descr"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/viewDeals_seller"
        android:layout_below="@+id/viewDeals_sum"
        android:layout_alignRight="@+id/viewDeals_sum"
        android:layout_alignEnd="@+id/viewDeals_sum" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/viewDeals_descr"
        android:layout_above="@+id/viewDeals_seller"
        android:layout_alignLeft="@+id/viewDeals_Date"
        android:layout_alignStart="@+id/viewDeals_Date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="B:  "
        android:id="@+id/textView2"
        android:layout_below="@+id/viewDeals_descr"
        android:layout_alignLeft="@+id/viewDeals_descr"
        android:layout_alignStart="@+id/viewDeals_descr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="S:  "
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/viewDeals_seller"
        android:layout_toLeftOf="@+id/viewDeals_seller"
        android:layout_toStartOf="@+id/viewDeals_seller" />

</RelativeLayout>