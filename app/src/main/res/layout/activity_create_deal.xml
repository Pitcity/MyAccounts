<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/create_deal_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/dealSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/dealAdding_btn"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/dealAdding_btn"
                android:ems="10"
                android:hint="@string/sum"
                android:inputType="numberDecimal"/>

            <EditText
                android:id="@+id/dealDescr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/dealSum"
                android:hint="@string/create_deal_descr"
                android:maxLines="1"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/dealBuyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dealAdditionSeller"
            android:layout_toEndOf="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"/>

        <Spinner
            android:id="@+id/dealSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/dealSum"/>


        <EditText
            android:id="@+id/dealAdditionBuyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/dealBuyer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/dealBuyer"
            android:layout_below="@+id/dealBuyer"
            android:layout_toStartOf="@+id/dealBuyer"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/dealAdditionSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/dealSeller"
            android:maxLines="1"/>

        <Button
            android:id="@+id/dealAdding_btn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Add Deal"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/dealSeller"
            android:text="@string/short_mark_for_buyer"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/dealSeller"
            android:layout_toLeftOf="@+id/dealSeller"
            android:layout_toStartOf="@+id/dealSeller"
            android:text="@string/short_mark_for_seller"/>

    </RelativeLayout>

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_deal_main_container"
        android:layout_centerInParent="true"
        android:layout_gravity="right"/>
</RelativeLayout>
