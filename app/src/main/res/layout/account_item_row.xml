<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/account_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_padding"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/account_item_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/account_item_name"
        android:layout_marginEnd="@dimen/base_padding"
        android:layout_marginRight="@dimen/base_padding"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/account_item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/account_item_name"
        android:layout_alignStart="@+id/account_item_name"
        android:layout_below="@+id/account_item_name"
        android:layout_marginRight="@dimen/base_padding"
        android:paddingLeft="@dimen/padding"
        android:paddingBottom="@dimen/padding"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <View
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>